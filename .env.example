# Firebase Configuration
# Get these from Firebase Console > Project Settings > General
EXPO_PUBLIC_FIREBASE_API_KEY=your_api_key_here
EXPO_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
EXPO_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
EXPO_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
EXPO_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
EXPO_PUBLIC_FIREBASE_APP_ID=your_app_id

# Admin Configuration
# Comma-separated list of admin email addresses
EXPO_PUBLIC_ADMIN_EMAILS=admin@example.com,other-admin@example.com

# Cloud Functions
# URL to the createPaymentPreference function (set after deploying functions)
# Format: https://REGION-PROJECT_ID.cloudfunctions.net/createPaymentPreference
EXPO_PUBLIC_CREATE_PAYMENT_URL=
